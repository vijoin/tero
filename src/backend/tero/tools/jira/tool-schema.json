{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "clientId": {
            "type": "string",
            "description": "The Jira OAuth application client ID",
            "minLength": 1
        },
        "clientSecret": {
            "type": "string",
            "writeOnly": true,
            "description": "The Jira OAuth application client secret",
            "minLength": 1
        },
        "scope": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["read:jira-work", "write:jira-work", "read:jira-user"]
            },
            "description": "The Jira OAuth application configured scope",
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "required": ["clientId", "clientSecret", "scope"],
    "additionalProperties": false
}